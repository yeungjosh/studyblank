<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".StudyActivity">

    <!-- Progress indicator -->
    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Card 1 of 10"
        android:textSize="16sp"
        android:textColor="#697746"
        android:padding="8dp"/>

    <!-- Stats display -->
    <TextView
        android:id="@+id/tv_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_progress"
        android:layout_centerHorizontal="true"
        android:text="Accuracy: 85% | Difficulty: Medium"
        android:textSize="14sp"
        android:textColor="#888888"
        android:padding="4dp"/>

    <!-- Flashcard container -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_flashcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_stats"
        android:layout_above="@id/btn_show_answer"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Question -->
            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is the largest bone in the human body?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:minHeight="150dp"
                android:layout_marginBottom="16dp"/>

            <!-- Answer (hidden initially) -->
            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The femur (thigh bone)"
                android:textSize="18sp"
                android:textColor="#B4BF49"
                android:gravity="center"
                android:minHeight="100dp"
                android:visibility="gone"
                android:background="#F0F4E8"
                android:padding="16dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- Show Answer Button -->
    <Button
        android:id="@+id/btn_show_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rating_buttons"
        android:layout_marginBottom="16dp"
        android:text="Show Answer"
        android:textSize="18sp"
        android:background="#B4BF49"
        android:textColor="#FFFFFF"
        android:padding="16dp"/>

    <!-- Rating Buttons Container -->
    <LinearLayout
        android:id="@+id/rating_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!-- Top row: Easy and Medium -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_easy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Easy\n(5 days)"
                android:textSize="14sp"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Good\n(2 days)"
                android:textSize="14sp"
                android:background="#B4BF49"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

        <!-- Bottom row: Hard and Again -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_hard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hard\n(10 min)"
                android:textSize="14sp"
                android:background="#FF9800"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_again"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Again\n(1 min)"
                android:textSize="14sp"
                android:background="#F44336"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
