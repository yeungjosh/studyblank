<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_deck_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gray's Anatomy - Skeletal System"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_deck_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn the bones and skeletal structure"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_card_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 cards"
            android:textSize="12sp"
            android:textColor="#B4BF49"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
